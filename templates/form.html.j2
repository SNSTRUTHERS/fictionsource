{{ form.hidden_tag() }}

{% for field in form if field.widget.input_type != "hidden" %}
<div class="form-group">
    {{ field.label }}
    {{ field }}

    {% if field.errors %}
        {% for error in field.errors %}
            <p class="form-error">{{error}}</p>
        {% endfor %}
    {% endif %}
</div>
{% endfor %}
